<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#BACDF76F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="15">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/list"
            android:dividerHeight="5dp"
            android:divider="#0003DAC5"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:id="@+id/number"
            android:hint="Введите число"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            />

        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           android:layout_weight="4">

           <!--<TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="0"
               android:textSize="30sp"
               android:layout_marginVertical="2dp"
               android:layout_marginLeft="10dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="1"
               android:textSize="30sp"
               android:layout_marginVertical="2dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="2"
               android:textSize="30sp"
               android:layout_marginVertical="2dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="3"
               android:textSize="30sp"
               android:layout_marginVertical="2dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="4"
               android:textSize="30sp"
               android:layout_marginVertical="2dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="5"
               android:textSize="30sp"
               android:layout_marginVertical="2dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="6"
               android:textSize="30sp"
               android:layout_marginVertical="2dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="7"
               android:textSize="30sp"
               android:layout_marginVertical="2dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="8"
               android:textSize="30sp"
               android:layout_marginVertical="2dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="9"
               android:textSize="30sp"
               android:layout_marginVertical="2dp"/>-->

       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="4">

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape1"
                android:text="1"
                android:id="@+id/oneButton"
                android:onClick="onClick"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:text="2"
                android:id="@+id/twoButton"
                android:onClick="onClick"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@drawable/buttonshape"
                android:text="3"
                android:id="@+id/threeButton"
                android:onClick="onClick"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_marginRight="6dp"
                android:background="@drawable/buttonsape2"
                android:text="OK"
                android:id="@+id/okButton"
                android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="4">

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:background="@drawable/buttonshape"
                android:text="4"
                android:id="@+id/fourButton"
                android:onClick="onClick"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:text="5"
                android:id="@+id/fiveButton"
                android:onClick="onClick"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@drawable/buttonshape"
                android:text="6"
                android:id="@+id/sixButton"
                android:onClick="onClick"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@drawable/buttonshape"
                android:layout_marginRight="6dp"
                android:text="DEL"
                android:id="@+id/deleteButton"
                android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="4">

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/buttonshape3"
                android:layout_weight="1"
                android:text="7"
                android:id="@+id/sevenButton"
                android:onClick="onClick"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginBottom="6dp"
                android:textSize="20sp"
                android:background="@drawable/buttonshape"
                android:text="8"
                android:id="@+id/eightButton"
                android:onClick="onClick"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/buttonshape"
                android:text="9"
                android:id="@+id/nineButton"
                android:onClick="onClick"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginBottom="6dp"
                android:textSize="20sp"
                android:layout_marginRight="6dp"
                android:background="@drawable/buttonshape4"
                android:text="0"
                android:id="@+id/nullButton"
                android:onClick="onClick"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
